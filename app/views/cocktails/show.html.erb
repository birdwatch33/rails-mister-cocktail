<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @doses.each do |dose| %>
      <li>
        <%= dose.ingredient.name.capitalize %> | <%= dose.description %> ||
        <%= link_to "Delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  <%= link_to 'Back', cocktails_path, class: 'btn btn-primary' %>

  <h1>Add some Ingredients</h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>

  <% if @dose.errors.any? %>
      <div class="errors-container">
        <ul>
          <% @dose.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <%= f.association :ingredient %>
  <%= f.input :description %>
  <%= f.submit "Add ingredient", class: "btn btn-danger" %>
  <% end %>
  <%= link_to 'Back', cocktail_path(@cocktail), class: 'btn btn-primary' %>


</div>
